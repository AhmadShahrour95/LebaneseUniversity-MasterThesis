<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:theme="@style/SkyblueAccent">

    <Button
        android:id="@+id/SendImageVideo_btn"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Photo &amp; Video"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SendAudio_btn"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Audio"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SendImageVideo_btn" />

    <Button
        android:id="@+id/SendDocument_btn"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Document"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SendAudio_btn" />




</androidx.constraintlayout.widget.ConstraintLayout>